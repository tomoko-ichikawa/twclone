<h1>つぶやき</h1>

<table>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "つぶやきを編集する", edit_blog_path(blog.id),data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'つぶやきを削除する', blog_path(blog.id), method: :delete,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<br>
<td><%= link_to 'つぶやきを投稿する',new_blog_path %></td>
